{% extends 'base.html.twig' %}

{% block body %}

<div class="container">

    <table class="table table-inverse">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.role }}</td>
                <td>
                    {% if user.role != 'ROLE_ADMIN' %}
                    <a href="{{ path('user-edit', { 'id' : user.id }) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}

        </tbody>
    </table>

    <a href="{{ path('user-create') }}" class="btn btn-primary">New User</a>
</div>

{% endblock %}
