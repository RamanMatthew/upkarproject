{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <table class="table">
        <thead>
            <tr style="margin: auto;">
                <th>Name</th>
                <th>Class</th>
                <th>Date of Birth</th>
            </tr>
        </thead>
        {% for student in students %}
        <tr>
            <td><a href="{{ path('student-show', { 'id' : student.id }) }}">{{ student.firstName }}</a></td>
            <td>{{ student.class }}</td>
            <td>{{ student.dob|date('d M, Y') }}</td>
        </tr>

        {% endfor %}
    </table>
</div>

{% endblock %}
