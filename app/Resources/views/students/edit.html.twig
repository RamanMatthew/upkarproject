{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}


{% block body %}

<div class="container">
    <h3>Edit Student</h3>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="hidden" name="delete" id="delete" value="0">
    <button type="submit" class="btn btn-primary" id="submit">Save Student</button>
    <button type="button" class="btn btn-danger" onclick="
    $('#delete').val(1)
    $('#submit').click()
    ">Delete Student</button>
    {{ form_end(form) }}
</div>

{% endblock %}
